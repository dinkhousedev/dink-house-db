# Mailpit Configuration (Development)
# Copy this to .env and update values as needed

# Set to 'development' to enable Mailpit
NODE_ENV=development

# Mailpit SMTP Configuration
SMTP_HOST=localhost
SMTP_PORT=1025
# No authentication needed for Mailpit
# SMTP_USER=
# SMTP_PASS=

# Sender email
EMAIL_FROM=noreply@dinkhouse.local

# Supabase Configuration
SUPABASE_URL=http://localhost:54321
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
